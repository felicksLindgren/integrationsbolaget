---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Integrationsbolaget">
	<header>
		<!-- <h1>Header Content</h1> -->
		<svg
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 100 100"
			preserveAspectRatio="none"
		>
			<polygon
				class="svg--sm"
				points="0,0 30,100 65,21 90,100 100,75 100,100 0,100"></polygon>
			<polygon
				class="svg--lg"
				points="0,0 15,100 33,21 45,100 50,75 55,100 72,20 85,100 95,50 100,80 100,100 0,100"
			></polygon>
		</svg>
	</header>
	<main></main>
</Layout>

<style>
	header {
		position: relative;
		height: 600px;
		background-image: url("/images/IB_start_2.jpeg");
		background-position: center;
		background-size: cover;
		background-repeat: no-repeat;
	}

	header svg {
		position: absolute;
		bottom: 0;
		width: 100%;
		height: 100px;
		fill: var(--warmGrey);
	}

	main {
	}

	@media (max-width: 699px) {
		.svg--lg {
			display: none;
		}
	}

	@media (min-width: 700px) {
		.svg--sm {
			display: none;
		}
	}
</style>
